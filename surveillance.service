[Unit]
Description=QuickCast Surveillance System
After=network.target

[Service]
Type=simple
User=davide
WorkingDirectory=/Users/davide/Documents/coding/perimeter-ai
ExecStart=/usr/bin/python3 /Users/davide/Documents/coding/perimeter-ai/start_surveillance.py
Restart=always
RestartSec=10
